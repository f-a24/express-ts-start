{
  "name": "express-ts-start",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev src/server/app.ts",
    "serve": "node build/server/app.js",
    "start": "npm run serve",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc && cpx src/server/views/*.ejs build/server/views && rimraf build/client && rimraf build/types",
    "build:client": "webpack --config webpack.config.js",
    "lint": "eslint src/**/*.{ts,tsx}",
    "fmt": "prettier-eslint --write src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "prettier-stylelint --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {},
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/sequelize": "^4.28.1",
    "@types/styled-components": "^4.1.15",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "cpx": "^1.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^2.3.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.3",
    "sequelize-cli": "^5.4.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.39",
    "typescript": "^3.4.4",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.4.1",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "express": "^4.17.0",
    "helmet": "^3.18.0",
    "mysql2": "^1.6.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sequelize": "^5.8.6",
    "styled-components": "^4.2.0",
    "supertest": "^4.0.2"
  }
}
