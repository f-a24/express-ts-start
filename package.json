{
  "name": "express-ts-start",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint-style": "stylelint src/**/*.scss",
    "format": "prettier-eslint --write src/**/*.ts",
    "format-style": "prettier-stylelint --write src/**/*.scss",
    "precommit": "lint-staged",
    "test": "jest",
    "client-build": "webpack --config webpack.config.js",
    "start": "ts-node-dev src/server/app.ts"
  },
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "prettier-stylelint --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {},
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/jquery": "^3.3.29",
    "@types/node": "^11.13.7",
    "@types/sequelize": "^4.27.48",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "autoprefixer": "^9.5.1",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-stylelint": "^0.4.2",
    "sass-loader": "^7.1.0",
    "sequelize-cli": "^5.4.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.0.6",
    "stylelint-scss": "^3.6.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.3",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-middleware": "^3.6.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "jquery": "^3.4.1",
    "mysql2": "^1.6.5",
    "sequelize": "^5.7.6"
  }
}
